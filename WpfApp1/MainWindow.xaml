<Window x:Class="TraiteurBernardWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraiteurBernardWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="810.345">

    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Fichier">
                    <MenuItem Header="_Quitter" Click="MenuItem_Quitter_Click" />
                </MenuItem>
                <MenuItem Header="_Personne">
                    <MenuItem Header="_Créer" Click="MenuItem_Personne_Creer_Click"/>
                    <MenuItem Header="_Lister" Click="MenuItem_Personne_Lister_Click" />
                </MenuItem>
                <MenuItem Header="_Tournées">
                    <MenuItem Header="_Créer" IsEnabled="false" />
                    <MenuItem Header="_Lister" />
                </MenuItem>
                <MenuItem Header="_Comptes de facturation">
                    <MenuItem Header="_Créer" Click="MenuItem_ComptesDeFacturation_Creer_Click"/>
                    <MenuItem Header="_Lister" Click="MenuItem_ComptesDeFacturation_Lister_Click" />
                </MenuItem>
            </Menu>

        </DockPanel>
        <DataGrid x:Name="dataGrid" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Margin="10,0" VerticalAlignment="Stretch"/>
        <Button Grid.Row="1" Grid.Column="1" Content="Init DB " HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Button_Click" Width="180" Margin="10,0,0,0"/>
        <Button x:Name="btnCreatePDFSemaine1" Content="Create PDF Semaine 1" Grid.Column="1" HorizontalAlignment="Left" Margin="10,53,0,0" Grid.Row="1" VerticalAlignment="Top" Width="180" Click="btnCreatePDFSemaine1_Click"/>
    </Grid>
</Window>
