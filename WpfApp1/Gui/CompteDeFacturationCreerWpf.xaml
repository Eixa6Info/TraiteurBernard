<Window x:Class="TraiteurBernardWPF.Gui.CompteDeFacturationCreerWpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraiteurBernardWPF.Gui"
        mc:Ignorable="d"
        Title="Gestion du compte de facturation" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <Button x:Name="btnFermer" Content="Fermer" HorizontalAlignment="Left" Margin="707,377,0,0" VerticalAlignment="Top" Width="75" Click="Fermer"/>
        <TextBox x:Name="txtNom" materialDesign:HintAssist.Hint="Nom du compte"  materialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Left" Height="40" Margin="10,58,0,0" TextWrapping="Wrap" Text="{Binding Nom}" VerticalAlignment="Top" Width="308"/>
        <ListBox x:Name="lstPersonnes"  HorizontalAlignment="Left" Height="344" Margin="380,10,0,0" VerticalAlignment="Top" Width="402" SelectionChanged="lstPersonnes_SelectionChanged"/>
        <Label x:Name="lblListe" materialDesign:HintAssist.Hint="Personnes liées"  materialDesign:HintAssist.IsFloating="True" Content="" HorizontalAlignment="Left" Margin="10,118,0,0" VerticalAlignment="Top" Height="291" Width="344"/>

    </Grid>
</Window>
