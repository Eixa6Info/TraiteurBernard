<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         ResizeMode="NoResize"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TraiteurBernardWPF.Gui"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="TraiteurBernardWPF.Gui.PdfCreerWpf"
        mc:Ignorable="d"
        Title="Créer un pdf" Height="144" Width="237.5">
    <Grid>

        <TextBox x:Name="txtSemaine" PreviewTextInput="VerifierFormatSemaine" materialDesign:HintAssist.Hint="Semaine"  materialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Semaine}" VerticalAlignment="Top" Width="179"/>
        <Button Content="Valider" Click="Valider" HorizontalAlignment="Right" Height="26" Margin="0,0,12,10" VerticalAlignment="Bottom" Width="75"  />
        <Button Content="Fermer"  HorizontalAlignment="Right" Height="26" Margin="0,0,97,10" VerticalAlignment="Bottom" Width="75"  Click="Fermer"/>

    </Grid>
</Window>
