<Window x:Class="TraiteurBernardWPF.Gui.BoiteDialogueCompoWpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TraiteurBernardWPF.Gui"
        mc:Ignorable="d"
        Title="BoiteDialogueCompoWpf" Height="243.59" Width="450" Loaded="Window_Loaded">
    <Grid>
        <TextBox Text="{Binding Comment}"  x:Name="txtBoxComment" Height="34" Margin="44,95,44,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnOK" Content="Ok" Margin="353,0,14,10" Height="31" Click="btnOK_Click" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtNumJour" materialDesign:HintAssist.Hint="Jour N°" materialDesign:HintAssist.IsFloating="True" HorizontalAlignment="Left" Height="40" Margin="205,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>
        <Label x:Name="labelDate" Content="Compo" HorizontalAlignment="Left" Margin="44,22,0,0" VerticalAlignment="Top" Width="173"/>
        <Button x:Name="btnSuivant" Content="Suivant" Margin="0,0,107,10" Height="31" Click="BtnSuivant" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="98"/>
    </Grid>
</Window>
