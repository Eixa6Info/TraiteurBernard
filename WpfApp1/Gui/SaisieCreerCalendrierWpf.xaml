<Window x:Class="TraiteurBernardWPF.Gui.SaisieCreerCalendrierWpf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TraiteurBernardWPF.Gui"
      mc:Ignorable="d"
      Title="Calendrier" Width="352" Height="448" Closed="Window_Closed" Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="331*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Calendar x:Name="calendar" Margin="29,30,17,0" SelectionMode="MultipleRange" Foreground="#DD000000" Height="362" VerticalAlignment="Top" MouseDoubleClick="calendar_MouseDoubleClick" >
            <Calendar.Background>
                <ImageBrush/>
            </Calendar.Background>
        </Calendar>
    </Grid>
</Window>
