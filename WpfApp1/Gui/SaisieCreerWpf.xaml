<Window x:Class="TraiteurBernardWPF.Gui.SaisieCreerWpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Name="edition"
        xmlns:local="clr-namespace:TraiteurBernardWPF.Gui"
        mc:Ignorable="d"
         ResizeMode="NoResize"
        Title="Création d'une saisie" Height="1030" Width="1400" Loaded="Window_Loaded" Closed="fermer">


    <Grid x:Name="gridMain">
        <Grid.Background>
            <ImageBrush ImageSource="{DynamicResource TableauSaisieMidiVille}"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="182*"/>
            <ColumnDefinition Width="165*"/>
            <ColumnDefinition Width="178*"/>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="178*"/>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="176*"/>
            <ColumnDefinition Width="156*"/>
            <ColumnDefinition Width="15*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="102"/>
            <RowDefinition Height="106*"/>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="116*"/>
            <RowDefinition Height="132*"/>
            <RowDefinition Height="108*"/>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="86*"/>
            <RowDefinition Height="156*"/>

        </Grid.RowDefinitions>



        <Label x:Name="lblSemaine" Grid.Row="0" Grid.Column="7" Content="Semaine : x" HorizontalAlignment="Left"  VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Height="27" Width="78" Margin="69,73,0,0" />
        <Label x:Name="lblPersonne" Grid.Row="0" Grid.Column="1" Content="Personne : x" HorizontalAlignment="Left"  VerticalAlignment="Bottom" FontWeight="Bold" FontSize="14" Height="27" Width="352" Margin="40,0,0,0" Grid.ColumnSpan="3"/>
        <Button Content="Enregistrer" Click="Valider" HorizontalAlignment="Right" Height="26" Margin="0,0,10,0" VerticalAlignment="Top" Width="110" Grid.Column="6" Grid.Row="0"/>
        <Button Content="Annuler" Click="Annuler" HorizontalAlignment="Right" Height="26" Margin="0,0,10,0" VerticalAlignment="Top" Width="92" Grid.Column="7" Grid.Row="0"/>
        <Button Content="Le soir ..." Click="Soir" HorizontalAlignment="Right" Height="26" Margin="0,0,10,0" VerticalAlignment="Top" Width="76" Grid.Column="5" Grid.Row="0"/>
        <Label x:Name="date1" Grid.Column="1" HorizontalAlignment="Left" Height="27" Grid.Row="2" VerticalAlignment="Top" Width="90" />
        <Label x:Name="date2" Grid.Column="2" HorizontalAlignment="Left" Height="27" Grid.Row="2" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="date3" Grid.Column="3" HorizontalAlignment="Left" Height="27" Grid.Row="2" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="date4" Grid.Column="4" HorizontalAlignment="Left" Height="27" Grid.Row="2" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="date5" Grid.Column="5" HorizontalAlignment="Left" Height="27" Grid.Row="2" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="date6" Grid.Column="6" HorizontalAlignment="Left" Height="27" Grid.Row="2" VerticalAlignment="Top" Width="90"/>
        <Label x:Name="date7" Grid.Column="7" HorizontalAlignment="Left" Height="27" Grid.Row="2" VerticalAlignment="Top" Width="90"/>
        <Button Content="Calendrier" Click="Calendrier" HorizontalAlignment="Right" Height="26" Margin="0,0,108,0" VerticalAlignment="Top" Width="105" Grid.Column="4" Grid.Row="0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
